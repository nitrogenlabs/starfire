{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es7"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noStrictGenericChecks": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "pretty": false,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/json-d-ts"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "**/*.test.*",
    "android",
    "build",
    "docs",
    "ios",
    "lib",
    "node_modules",
    "test"
  ],
  "include": [
    "./src/**/*"
  ],
  "types": [
    "./node_modules/@types",
    "./node_modules/json-d-ts",
    "./src/lib/types",
    "react",
    "react-native",
    "jest"
  ]
}